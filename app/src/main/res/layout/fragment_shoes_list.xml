<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShoesListFragment">
    <!--Using linear layout with scrollView since there are no nested elements in this layout
     The views are generated programatically and are at the same level!-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/listLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:layout_marginStart="20sp"
        android:layout_marginTop="75sp"
        android:layout_marginEnd="10sp">


    </LinearLayout>
    </ScrollView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnAddShoe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="200sp"
        android:layout_marginLeft="100sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="40sp"
        android:layout_marginBottom="30sp"
        android:clickable="true"
        android:contentDescription="TODO"
        android:visibility="visible"
        app:srcCompat="@android:drawable/ic_input_add"
        android:layout_gravity="bottom|end"
        tools:visibility="visible" />
</FrameLayout>
</layout>